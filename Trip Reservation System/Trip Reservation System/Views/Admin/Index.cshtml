@model  IEnumerable<Trip_Reservation_System.Models.Passenger>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage_passenger</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Adress
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            SSN
        </th>
        <th>
            Gender
        </th>
        <th>
            Block
        </th>
        <th>
            Wallet
        </th>
        <th>

        </th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                @p.Name
            </td>
            <td>
                @p.Adress
            </td>
            <td>
                @p.DateOfBirth
            </td>
            <td>
                @p.SSN
            </td>
            <td>
                @p.Gender
            </td>
            <td>
                @p.Block
            </td>
            <td>
                @p.Wallet
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = p.Id })
                |
                @Html.ActionLink("Block", "Block", new { id = p.Id })
                |
                @Html.ActionLink("Edit", "Admin_Edit_Passenger", new { id = p.Id })

            </td>
            <td></td>
        </tr>
    }
</table>
